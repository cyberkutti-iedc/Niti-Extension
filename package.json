{
  "name": "niti",
  "displayName": "Niti",
  "description": "A VS Code extension for embedded Rust development.",
  "version": "0.0.1",
  "publisher": "SREERAJ V RAJESH",
  "repository": {
    "type": "git",
    "url": "https://github.com/cyberkutti-iedc/Niti-Extension"
  },
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Programming Languages",
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onWorkspaceContains:Cargo.toml"
  ],
  "license": "MIT",
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.buildProject",
        "title": "NITI :Build Project"
      },
      {
        "command": "extension.flashFirmware",
        "title": "NITI :Flash Firmware"
      },
      {
        "command": "extension.selectComPort",
        "title": "NITI :Select COM Port"
      },
      {
        "command": "extension.showAbout",
        "title": "NITI :About us"
      }
    ],
   "configuration": {
      "type": "object",
      "properties": {
        "niti.rustToolchainPath": {
          "type": "string",
          "default": "",
          "description": "The path to the Rust toolchain for Niti."
        },
        "niti.avrToolchainPath": {
          "type": "string",
          "default": "",
          "description": "The path to the AVR toolchain for Niti."
        },
        "niti.loggingLevel": {
          "type": "string",
          "default": "info",
          "enum": ["debug", "info", "warn", "error"],
          "description": "Logging level for Niti extension."
        }
      }
    }
  
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext .ts",
    "test": "vscode-test"
  },
  "icon": "images/logo.jpg",
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.96.0",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.16.0",
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "serialport": "^13.0.0"
  }
}
